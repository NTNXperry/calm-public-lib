        {
            "uid":"58948a924922934094879d67",
            "classification":"runshell",
            "script":"#!\/bin\/bash\nset -ex\nsudo apt-get update\nsudo apt-get -y install postgresql postgresql-contrib postgresql-client\n",
            "creation_time":1464266779,
            "credential_id":"58948a924922934094879d55",
            "modification_time":1486129828,
            "version":170,
            "critical":true,
            "editables":[

            ],
            "name":"Install postgres"
        },
        {
            "uid":"58948a924922934094879d68",
            "classification":"runshell",
            "script":"#!\/bin\/bash\nset -ex\nsudo service postgresql stop\nsudo su - postgres <<EOF\n\n\necho \"host    replication     rep     @@{ip_master}@@\/32     md5\" >> \/etc\/postgresql\/9.5\/main\/pg_hba.conf\necho \"@@{ip_master}@@:5432:*:rep:@@{password}@@\" > ~\/.pgpass\nchmod 0600 ~\/.pgpass\n\ncat > \/etc\/postgresql\/9.5\/main\/postgresql.replication.conf  << END\nlisten_addresses = '*'\t#'@@{ip_slave}@@,localhost'\nwal_level = 'hot_standby'\narchive_mode = on\narchive_command = 'cd .'\nmax_wal_senders = 3\nhot_standby = on\ncheckpoint_segments = 8    \nwal_keep_segments = 8 \nEND\n\ncat \/etc\/postgresql\/9.5\/main\/postgresql.replication.conf >> \/etc\/postgresql\/9.5\/main\/postgresql.conf\nmv 9.5\/main 9.5\/main_original\npg_basebackup -h @@{ip_master}@@ -D \/var\/lib\/postgresql\/9.5\/main -U rep -v -P\ntouch 9.5\/main\/recovery.conf\nmkdir -p 9.5\/main\/archive\necho \"standby_mode = 'on'\nprimary_conninfo = 'host=@@{ip_master}@@ port=5432 user=rep password=@@{password}@@'\nrestore_command = 'cp \/\/var\/lib\/postgresql\/9.5\/main\/archive\/%f %p'\ntrigger_file = '\/tmp\/postgresql.trigger.5432'\" | tee -a 9.5\/main\/recovery.conf\n\nEOF\nsudo service postgresql restart\n",
            "creation_time":1464266899,
            "credential_id":"58948a924922934094879d55",
            "modification_time":1486129828,
            "version":169,
            "critical":false,
            "editables":[

            ],
            "name":"Configure Slave"
        },
        {
            "uid":"58948a924922934094879d69",
            "classification":"runshell",
            "script":"#!\/bin\/bash\nset -ex\nsudo su - postgres <<\"EOF\"\n#create a user rep to be used specifically for replication\npsql -c \"CREATE USER rep REPLICATION LOGIN ENCRYPTED PASSWORD '@@{password}@@';\"\n\ncp \/etc\/postgresql\/9.5\/main\/pg_hba.conf \/etc\/postgresql\/9.5\/main\/pg_hba.conf.org\nIP=\"@@{ip_slave}@@\"\nslaves=(${IP\/\/,\/ })\nfor slave in \"${slaves[@]}\" \ndo\necho \"host    replication     rep     ${slave}\/32     md5\" >> \/etc\/postgresql\/9.5\/main\/pg_hba.conf\ndone\n#create .conf file with required parameters\ncat > \/etc\/postgresql\/9.5\/main\/postgresql.replication.conf  << END\nlisten_addresses = '*'\t#'@@{ip_master}@@,localhost'\nwal_level = 'hot_standby'\narchive_mode = on\narchive_command = 'cd .'\nmax_wal_senders = 3\nhot_standby = on\ncheckpoint_segments = 8    \nwal_keep_segments = 8 \nEND\n\ncat \/etc\/postgresql\/9.5\/main\/postgresql.replication.conf >> \/etc\/postgresql\/9.5\/main\/postgresql.conf\n\n#restart the service to see the changes\nEOF\nsudo service postgresql restart\n",
            "creation_time":1464758781,
            "credential_id":"58948a924922934094879d55",
